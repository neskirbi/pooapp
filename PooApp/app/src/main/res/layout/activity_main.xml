<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <Button
        android:id="@+id/pedo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/pedo"/>

    <Button
        android:id="@+id/eructo"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/eructo"
        tools:layout_editor_absoluteX="337dp" />

    <Button
        android:id="@+id/bomba"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bomba"
        tools:layout_editor_absoluteX="552dp" />

    <Button
        android:id="@+id/estornudo"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_gravity="left|bottom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/estornudo"
        tools:layout_editor_absoluteX="125dp" />

    <Button
        android:id="@+id/tos"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/tos"/>

    <Button
        android:id="@+id/pistola"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="right|bottom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/pistola"/>

    <com.google.android.gms.ads.AdView
        android:layout_gravity="bottom|center_horizontal"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner">
    </com.google.android.gms.ads.AdView>

</FrameLayout>